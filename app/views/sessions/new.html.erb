<header>
  <h1 class="page-heading">Sign In</h1>
</header>
<hr>

<main class="page-container">

  <%= simple_form_for :session, { url: session_path } do |f| %>

    <%= f.input :email %>

    <%= f.input :password %>

    <%= f.submit 'Sign In', class: 'btn btn-outline-light'  %>

    <%= link_to 'Sign Up', new_user_path, class: 'btn btn-outline-light my-3 ml-3' %>

  <% end %>
  
</main>
